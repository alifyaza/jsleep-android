<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    android:visibility="visible"
    tools:context="AboutMe">

    <androidx.cardview.widget.CardView
        android:layout_width="376dp"
        android:layout_height="355dp"
        android:layout_margin="20dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="39dp"
        android:backgroundTint="#2195F2"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:contentPadding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:onClick="expand"
            android:orientation="vertical"
            android:animateLayoutChanges="true" >

            <Button
                android:id="@+id/RegisterRenterButton"
                android:layout_width="324dp"
                android:layout_height="56dp"
                android:backgroundTint="#FE9700"
                android:text="Register Renter"
                android:visibility="visible"
                tools:layout_editor_absoluteX="47dp"
                tools:layout_editor_absoluteY="350dp" />

            <EditText
                android:id="@+id/RenterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="21"
                android:gravity="start"
                android:inputType="number"
                android:minHeight="48dp"
                android:text="Name"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:visibility="gone"
                tools:layout_editor_absoluteX="47dp"
                tools:layout_editor_absoluteY="426dp" />

            <EditText
                android:id="@+id/RenterAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="21"
                android:gravity="start"
                android:inputType="number"
                android:minHeight="48dp"
                android:text="Address"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:visibility="gone"
                tools:layout_editor_absoluteX="47dp"
                tools:layout_editor_absoluteY="491dp" />

            <EditText
                android:id="@+id/RenterPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="21"
                android:gravity="start"
                android:inputType="number"
                android:minHeight="48dp"
                android:text="Phone Number"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:visibility="gone"
                tools:layout_editor_absoluteX="47dp"
                tools:layout_editor_absoluteY="555dp" />

            <Button
                android:id="@+id/CancelButton"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="7"
                android:backgroundTint="#FF9800"
                android:text="Cancel"
                android:visibility="gone" />

            <Button
                android:id="@+id/RegisterButton2"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:backgroundTint="#FF9800"
                android:text="Register"
                android:visibility="gone" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/outputbalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:gravity="left"
        android:letterSpacing="0.06"
        android:lineSpacingExtra="-6sp"
        android:text="Balance"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outputemail" />

    <EditText
        android:id="@+id/Amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="44dp"
        android:ems="7"
        android:gravity="center"
        android:inputType="number"
        android:minHeight="48dp"
        android:text="Amount"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outputbalance" />

    <TextView
        android:id="@+id/outputemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="26dp"
        android:gravity="left"
        android:letterSpacing="0.06"
        android:lineSpacingExtra="-6sp"
        android:text="Email"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outputname" />

    <TextView
        android:id="@+id/outputname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="34dp"
        android:gravity="left"
        android:letterSpacing="0.06"
        android:lineSpacingExtra="-6sp"
        android:text="Name"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AccountDetails" />

    <Button
        android:id="@+id/topup_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="88dp"
        android:layout_weight="1"
        android:backgroundTint="#FF9800"
        android:text="TOP UP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displaybalance" />

    <TextView
        android:id="@+id/displaybalance"
        android:layout_width="134dp"
        android:layout_height="15dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="46dp"
        android:gravity="end"
        android:letterSpacing="0.06"
        android:lineSpacingExtra="-6sp"
        android:text="0.0"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayemail" />

    <TextView
        android:id="@+id/displayname"
        android:layout_width="132dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="46dp"
        android:gravity="end"
        android:letterSpacing="0.06"
        android:lineSpacingExtra="-6sp"
        android:text="Alifya"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/displayemail"
        android:layout_width="132dp"
        android:layout_height="18dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="46dp"
        android:gravity="end"
        android:letterSpacing="0.06"
        android:lineSpacingExtra="-6sp"
        android:text="alifya@ui.ac.id"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayname" />

    <TextView
        android:id="@+id/AccountDetails"
        android:layout_width="184dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="180dp"
        android:gravity="top"
        android:letterSpacing="0.06"
        android:lineSpacingExtra="-6sp"
        android:text="Account Details"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>